<?xml version="1.0" encoding="UTF-8"?>
<!-- =================================================================
     Configuration Logback avec support OpenTelemetry et JSON
     Les logs sont envoyés en JSON pour Loki via stdout
     ================================================================= -->
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Pattern pour logs console en développement avec traceId -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%X{trace_id:-},%X{span_id:-}] --- [%15.15t] %-40.40logger{39} : %m%n"/>

    <!-- Appender console standard pour développement -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Appender JSON pour production (Loki via OTel Collector) -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service.name":"vitrine-backend","deployment.environment":"${ENVIRONMENT:-dev}"}</customFields>
            <!-- Inclure les identifiants de trace pour corrélation -->
            <includeMdcKeyName>trace_id</includeMdcKeyName>
            <includeMdcKeyName>span_id</includeMdcKeyName>
            <includeMdcKeyName>trace_flags</includeMdcKeyName>
            <!-- Timestamp au format ISO -->
            <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSSX</timestampPattern>
        </encoder>
    </appender>

    <!-- Profile développement : logs console lisibles avec traces -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.devops.vitrine" level="DEBUG"/>
        <logger name="org.springframework.web" level="INFO"/>
        <logger name="io.opentelemetry" level="INFO"/>
    </springProfile>

    <!-- Profile production : logs JSON structurés -->
    <springProfile name="production">
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
        </root>
        <logger name="com.devops.vitrine" level="INFO"/>
        <logger name="org.springframework.web" level="WARN"/>
    </springProfile>

    <!-- Profil par défaut : JSON -->
    <springProfile name="!dev &amp; !production">
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
        </root>
    </springProfile>
</configuration>
